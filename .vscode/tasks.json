{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Get Unity Process ID",
            "type": "shell",
            "command": "ps aux | grep -i 'Unity.app/Contents/MacOS/Unity' | grep -v grep | awk '{print $2}' | head -1",
            "problemMatcher": []
        },
        {
            "label": "Launch Unity Editor",
            "type": "shell",
            "command": "open \"/Applications/Unity/Hub/Editor/6000.3.2f1/Unity.app\" --args -projectPath \"${workspaceFolder}\"",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*$",
                    "endsPattern": "^.*$"
                }
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        }
    ]
}

